
<%= form_with model: @user, url: users_path, local: true do |form| %>
  <div class="container d-flex flex-column align-items-center justify-content-center vh-100 text-center">
  <div class="card p-5 bg-white shadow-lg border-0 rounded-5 align-items-center mx-auto">
  <div class="display-4 fw-bold mb-3">Register</div>
  <% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger mb-4">
    <h2 class="alert-heading"><%= pluralize(@user.errors.count, "error") %> filling out registration:</h2>
    <ul class="mb-0">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="mb-3">
    <div class="fw-bold mb-2 fs-3"><%= form.label :email %></div>
    <div><%= form.email_field :email %></div>
  </div>
  <div class="mb-3">
    <div class="fw-bold mb-2 fs-3"><%= form.label :password %></div>
    <%= form.password_field :password %>
  </div>

  <div class="mb-3">
  <div class="fw-bold mb-2 fs-3"><%= form.label :password_confirmation %></div>
  <%= form.password_field :password_confirmation %>
</div>
  
  <div class="mb-3">
   <%= form.submit "Register", class: "btn btn-lg btn-custom-secondary" %>
   </div>

   <div class="mb-0">
   <p>Already have an account? <%= link_to "Login", new_session_path %></p>
   </div>
  </div>
 
  </div>
<% end %>

