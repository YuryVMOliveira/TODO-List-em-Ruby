<%= render 'lists/navbar' %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Edit List</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @list, local: true do |form| %>
            <% if @list.errors.any? %>
              <div class="alert alert-danger">
                <h6>Errors found:</h6>
                <ul class="mb-0">
                  <% @list.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :name, "List Name", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", required: true %>
            </div>

            <div class="d-flex gap-2">
              <%= form.submit "Update List", class: "btn btn-primary" %>
              <%= link_to "Cancel", lists_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
