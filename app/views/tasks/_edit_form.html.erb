<%= form_with model: @task, local: true do |form| %>
  <div class="modal-body">
    <% if @task.errors.any? %>
      <div class="alert alert-danger">
        <h6>Errors found:</h6>
        <ul class="mb-0">
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title, "Task Title", class: "form-label" %>
      <%= form.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :description, "Description", class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 3 %>
    </div>

    <div class="mb-3">
      <%= form.label :due_date, "Due Date", class: "form-label" %>
      <%= form.date_field :due_date, class: "form-control" %>
    </div>

    <div class="mb-3">
      <div class="form-check">
        <%= form.check_box :completed, class: "form-check-input" %>
        <%= form.label :completed, "Mark as completed", class: "form-check-label" %>
      </div>
    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" onclick="closeEditTaskModal()">Cancel</button>
    <%= form.submit "Update Task", class: "btn btn-primary" %>
  </div>
<% end %>

